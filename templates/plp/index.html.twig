{% extends "base.html.twig" %}

{% set bodyClass = 'flex flex-col min-h-screen' %}

{% block title %}PLP{% endblock %}

{% block body %}
	<header>
		{%  include 'layout/header/header.html.twig' %}
	</header>
	<main>
		{% block main %}
			<div class="grid grid-cols-4">
				{% for product in plpData.abstractProducts %}
					{% include "plp/_product-tile.html.twig" with { product } %}
				{% endfor %}
			</div>
		{% endblock %}
	</main>
	<footer>
		{% include 'layout/footer/footer.html.twig' %}
	</footer>
{% endblock %}
